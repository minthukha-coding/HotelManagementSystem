@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Color="Color.Transparent">
        <MudText Typo="Typo.body2" Class="ml-4">
            © @DateTime.Now.Year Hotel Myaungmya
        </MudText>
    </MudAppBar>

    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Color="Color.Default">
        <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">
            Rooms
        </MudNavLink>
        <MudNavLink OnClick="Logout" Icon="@Icons.Material.Filled.ExitToApp" Match="NavLinkMatch.All">
            Logout
        </MudNavLink>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@code {
    public async Task Logout()
    {
        // Clear the token from localStorage
        await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");

        // Navigate to the logi page
        _goto.NavigateTo("/login", forceLoad: true);
    }
}