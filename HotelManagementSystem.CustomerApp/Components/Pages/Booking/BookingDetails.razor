@page "/booking-details/{bookingId}"
@using HotelManagementSystem.Domain.Features.Booking
@layout UserLayout

<MudContainer>
    <MudText Typo="Typo.h4" GutterBottom="true">Booking Recipet</MudText>

    <MudPaper Elevation="3" Class="pa-4">
        <MudGrid>
            <MudItem xs="12">
                <MudText Typo="Typo.h6">Room @room.RoomNumber</MudText>
                <MudText>Category: @room.Category</MudText>
                <MudText>Price: $@room.Price</MudText>
                <MudText>Check-in Date: @bookingModel.CheckInDate?.ToString("MM/dd/yyyy")</MudText>
                <MudText>Check-out Date: @bookingModel.CheckOutDate?.ToString("MM/dd/yyyy")</MudText>
                <MudText>Stay Duration: @bookingModel.NumberOfDays nights</MudText>
                <MudText>Total Price: $@bookingModel.Price</MudText>
            </MudItem>
            <MudItem>
                <MudButton Variant="Variant.Filled"
                           Color="Color.Info"
                           @onclick=ClickOk>
                    Ok
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>