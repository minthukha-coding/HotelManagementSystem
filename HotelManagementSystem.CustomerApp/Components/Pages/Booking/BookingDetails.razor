@page "/booking-details"
@using HotelManagementSystem.Domain.Features.Booking
@layout UserLayout

<MudContainer>
    <MudText Typo="Typo.h4" GutterBottom="true">Booking Confirmation</MudText>

    <MudPaper Elevation="3" Class="pa-4">
        <MudGrid>
            <MudItem xs="12">
                <MudText Typo="Typo.h6">Room @room.RoomNumber</MudText>
                <MudText>Category: @room.Category</MudText>
                <MudText>Price: $@room.Price/night</MudText>
                <MudText>Check-in Date: @bookingModel.CheckInDate?.ToString("MM/dd/yyyy")</MudText>
                <MudText>Check-out Date: @bookingModel.CheckOutDate?.ToString("MM/dd/yyyy")</MudText>
                <MudText>Total Price: $@totalPrice</MudText>
            </MudItem>
            <MudItem xs="12" Class="d-flex justify-end">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           OnClick="ConfirmBooking">
                    Confirm Booking
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>