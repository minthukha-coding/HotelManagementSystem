@page "/register"

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h5" Class="mb-4 text-center">User Register</MudText>

        <MudForm @ref="form">
            <MudGrid>
                <MudItem xs="12" Class="mb-1">
                    <MudTextField Label="FullName" @bind-Value="fullname" Required="true" Immediate="true" MudVariant="MudVariant.Outlined" FullWidth="true" />
                </MudItem>
                <MudItem xs="12" Class="mb-1">
                    <MudTextField Label="PhoneNumber" @bind-Value="phoneNumber" Required="true" Immediate="true" MudVariant="MudVariant.Outlined" FullWidth="true" />
                </MudItem>
                <MudItem xs="12" Class="mb-1">
                    <MudTextField Label="Email" Validation="@EmailValidation" @bind-Value="email" Required="true" Immediate="true" MudVariant="MudVariant.Outlined" FullWidth="true" />
                </MudItem>
                <MudItem xs="12" Class="mb-1">
                    <MudTextField Label="Password" @bind-Value="password" Type="password" Required="true" Immediate="true" MudVariant="MudVariant.Outlined" FullWidth="true" />
                </MudItem>
                <MudItem xs="12" Class="mb-1">
                    <MudTextField Label="Address" @bind-Value="address" Required="true" Immediate="true" MudVariant="MudVariant.Outlined" FullWidth="true" />
                </MudItem>
                <MudItem xs="12" Class="text-center">
                    <MudButton MudVariant="MudVariant.Filled" Color="Color.Primary" OnClick="HandleValidSubmit" FullWidth="true">
                        Register
                    </MudButton>
                </MudItem>
                <MudItem xs="12" Class="text-center mt-2">
                    <MudText Typo="Typo.body2">
                        Already have an account? <MudLink Href="/login" Color="Color.Primary">Login</MudLink>
                    </MudText>
                </MudItem>
            </MudGrid>
        </MudForm>
    </MudPaper>
</MudContainer>