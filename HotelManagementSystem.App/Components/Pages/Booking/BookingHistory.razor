@page "/customer-booking-history"

<MudContainer>
    <MudText Typo="Typo.h4" GutterBottom="true">Bookings</MudText>

    <MudTable Items="@bookings" Hover="true">
        <HeaderContent>
            <MudTh>Customer Name</MudTh>
            <MudTh>Room No</MudTh>
            <MudTh>Check-In</MudTh> 
            <MudTh>Check-Out</MudTh>
            <MudTh>Status</MudTh>
            <MudTh>Stay Duration</MudTh>
            <MudTh>Total Price</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.CustomerName</MudTd>
            <MudTd>@context.RoomNumber</MudTd>
            <MudTd>@context.CheckInDate</MudTd>
            <MudTd>@context.CheckOutDate</MudTd>
            <MudTd>@context.Status</MudTd>
            <MudTd>@context.NumberOfDays Nx ight</MudTd>
            <MudTd>@context.Price $</MudTd>
        </RowTemplate>
    </MudTable>
</MudContainer>
