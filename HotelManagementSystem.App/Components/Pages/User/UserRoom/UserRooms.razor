@page "/user"
@inject NotificationService NotificationService

<RadzenStack RadzenOrientation="Orientation.Horizontal" RadzenAlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
    <RadzenButton OnClick="() => OnClick("Danger")" Text="Danger" ButtonStyle="ButtonStyle.Danger" />
    <MudButton Variant="MudBlazor.Variant.Outlined" Color="Color.Error" OnClick="() => DeleteRoom()">Delete</MudButton>
</RadzenStack>

@code {
    private void OnClick(string text)
    {
        NotificationService.Notify(new NotificationMessage 
        { 
            Severity = NotificationSeverity.Info, 
            Summary = "Button Clicked", 
            Detail = text 
        });
    }

    private void DeleteRoom()
    {
        // Implement room deletion logic
    }
}
